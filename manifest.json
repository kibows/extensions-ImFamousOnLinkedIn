{
  "manifest_version": 2,
  "name": "I'am famous on LinkedIn ✌️",
  "version": "0.0.1",
  "description": "Trouvez la personne la plus influente de votre feed LinkedIn",

  "icons": {
    "48": "fame.svg",
    "96": "fame.svg"  
  },

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/feed/*"],
      "js": ["main.js"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "fame.svg",
      "32": "fame.svg"
    },
    "default_popup": "popup/index.html",
    "default_title": "Qui est le plus influent?!"
  },
  "permissions": ["<all_urls>"]
}
